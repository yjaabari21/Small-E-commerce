@using HelloWorld.Data
@model List<User>
@{
    ViewBag.Title = "User List";
    ViewBag.Link = "~/User/Add";
}
@Html.Partial("_TopHeader")

@*<table class="table table-striped table-bordered">*@

<table class="my-table">
    <thead class="">
        <tr>
            <th class="actions">Actions</th>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Mobile</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User item in (List<User>)Model)
        {
            <tr>
                <td>
                    <a href="~/User/Delete?id=@item.Id" class="btn btn-danger btn-sm">
                        <i class="fa-solid fa-trash"></i>
                        <span>Delete</span>
                    </a>
                    <a href="~/User/Edit?id=@item.Id" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-pen-to-square"></i>
                        <span>Edit</span>
                    </a>
                    <a href="~/User/Details?id=@item.Id" class="btn btn-warning btn-sm">
                        <i class="fa-solid fa-circle-info"></i>
                        <span>Details</span>
                    </a>
                </td>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
            </tr>
        }

    </tbody>
</table>

