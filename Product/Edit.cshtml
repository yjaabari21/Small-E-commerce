@using HelloWorld.Data
@model Product

@Html.Partial("_ProductHead")

<link href="~/Content/Product-style/style.css" rel="stylesheet" />

<form class="form form-control w-25" action="~/Product/Edit" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="Id" id="Id" value="@Model.Id" />


    <div class="m-2">
        <label for="name">Name</label>
        <input class="form-control" id="name" type="text" name="Name" value="@Model.Name" placeholder="New Name" />
    </div>
    <div class="m-2">
        <label for="desc">Description</label>
        <input class="form-control" type="text" id="desc" name="Description" value="@Model.Description" placeholder="New Description" />
    </div>
    <div class="m-2">
        <label for="price">Price</label>
        <input class="form-control" type="text" id="price" name="Price" value="@Model.Price" placeholder="New price" />
    </div>
    <button class="btn btn-dark m-2 w-100 ms-2">
        <i class="fa-solid fa-download"></i>
        <span>Save</span>
    </button>
</form>